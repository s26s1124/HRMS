@model HumanResource.Models.HRMS.StrRequestDetails

<div class="card card-raised">
    <div class="card-header bg-primary text-white px-4">
        <div class="d-flex justify-content-between align-items-center">
            <div class="me-4">
                <h2 class="card-title text-white mb-0">Store Retrive Request</h2>
                <div class="card-subtitle">Details and history</div>
            </div>
            <div class="d-flex gap-2">
                <button class="btn btn-lg btn-text-white btn-icon" type="button"><i class="material-icons">download</i></button>
                <button class="btn btn-lg btn-text-white btn-icon" type="button"><i class="material-icons">print</i></button>
            </div>
        </div>
    </div>
    <div class="card-body p-4">

<div class="row">
    <div class="col-md-12">
                <form asp-action="UserReqRetrieval" id="ApplicationForm" >
                  <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input type="hidden" asp-for="@Model.IsItemRetrieve" value="1" />
                    <input type="hidden" name="EmpNo" value="@ViewBag.EmpNo" />

                    <div class="form-group">
                        <label asp-for="ReqNo" class="control-label"></label>
                        <select class="form-control" asp-for="@Model.ReqNo" asp-items="@ViewBag.Requst"
                        id="lstReqCtrl" onchange="FillRetrivalItems(this,'lstItemId');"></select>
                        <span asp-validation-for="@Model.ReqNo" class="text-danger"></span>

             </div>

             <div class="form-group">
                 <label asp-for="@Model.ReqDetailNo" class="control-label"></label>
                        <select class="form-control" asp-for="@Model.ReqDetailNo" asp-items="@ViewBag.ListofItems"
                                id="lstItemId"> </select>
                        <span asp-validation-for="@Model.ReqDetailNo" class="text-danger"></span>

             </div>
                    <div class="form-group">
                        <label asp-for="@Model.QutRetrieve" class="control-label"></label>
                        <input class="form-control" asp-for="@Model.QutRetrieve" />
                        <span asp-validation-for="@Model.QutRetrieve" class="text-danger"></span>

                    </div>

                    <div class="form-group">
                        <label asp-for="@Model.RetrieveReason" class="control-label"></label>
                        <textarea class="form-control" asp-for="@Model.RetrieveReason"></textarea>
                        <span asp-validation-for="@Model.RetrieveReason" class="text-danger"></span>

                    </div>

                    <div class="form-group mt-3">

                        <input type="submit" value="Submit" class="btn btn-primary btn-block w-100" />
                    </div>
        </form>
    </div>
</div>
 </div>
</div>
