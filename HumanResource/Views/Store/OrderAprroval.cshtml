@model HumanResource.Models.HRMS.StrReqMstr
@{
    Layout = null;
}
<form>
    <div class="col-md-12">
                   <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="EmpNo" class="control-label"></label>
                                <input asp-for="EmpNo"  class="form-control" readonly />
                            </div>
                        </div>
                        <div class="col-md-9">
                            <div class="form-group">
                                <label class="control-label">Employee Name</label>
                                <input type="text" value="@ViewBag.EmpNameA" class="form-control" readonly />
                            </div>
                        </div>
                    </div>
             

            <div class="row p-4">
            </div>
                    <div class="row">
                           <table class="table table-striped table-hover mb-0">
                             <thead class="table-dark">
                                <tr>
                                    <th scope="col">CategoryCode </th>
                                    <th scope="col">ItemCode</th>
                                    <th scope="col">ItemQuantity</th>
                                    <th scope="col"> ItemRemar </th>
                                    <th scope="col"> Manger Status </th>
                                    <th scope="col"> Store Manger Status </th>
                                    <th scope="col"> Is Item Retrieve </th>
                                    <th scope="col"> Quntity Retrieve </th>
                                   <th scope="col"> Retrieve Reason </th>
 

                                </tr>
                            </thead>
                            <tbody>
                             @foreach (var item in Model.StrRequestDetails)
                                {
                                    <tr>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.StrCategory.CategoryName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.StrItem.ItemName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ItemQuantity)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ItemRemark)
                                     </td>
                            <td>

                                @{
                                    if (item.StrReqMstr.ManagrApprFlag == 2)
                                    {
                                        <b><p class="text-danger text-xl-center">Rejected</p></b>
                                    }
                                    else if (item.StrReqMstr.ManagrApprFlag == 1)
                                    {
                                        <b>   <p class="text-xl-center text-info">Appoved</p></b>
                                    }

                                    else
                                    {
                                        <b><p class="text-xl-center">Pending</p> </b>
                                    }

                                }
                            </td>
                                     <td>

                                @{
                                    if (item.StrManagerAppr == 2)
                                    {
                                        <b><p class="text-danger text-xl-center">Rejected</p></b>
                                    }
                                    else if (item.StrManagerAppr == 1)
                                    {
                                        <b>   <p class="text-xl-center text-info">Appoved</p></b>
                                    }

                                    else
                                    {
                                        <b><p class="text-xl-center">Pending</p> </b>
                                    }

                                }
                                     </td>

                            <td>
                                @{
                                    if (item.IsItemRetrieve == 1)
                                {
                                      <b><p class="text-xl-center">Yes</p></b>
                                }
                                 else
                                 {
                                     <b><p class="text-xl-center">No</p></b>
                                 }
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.QutRetrieve)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.RetrieveReason)
                            </td>
                                 
                                 
                                 </tr>
                                }
                            </tbody>


                        </table>
                    </div>
    <div class="row p-4">

            @if (@ViewBag.Status != "Info")
            {
                <a asp-controller="Store" asp-action="OrderAprroval" asp-route-id="@Model.ReqNo" asp-route-foo="@ViewBag.Status" asp-route-Page="@ViewBag.Page" class="btn btn-primary text-white"><i class="fas fa-pencil-alt"></i>@ViewBag.Status</a>

            }

    </div>


                </div>
</form>
  

